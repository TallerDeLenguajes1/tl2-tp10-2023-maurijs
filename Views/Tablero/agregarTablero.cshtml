@{ 
    ViewData["Title"] = "Agregar Tablero";
}

@model EspacioTareas.Tablero

<h1>@ViewData["Title"]</h1>
<form asp-controller="Tablero" asp-action="AgregarTableroFromForm" method="post">
    <div class="form-group">
        <label asp-for="@Model.Id"></label>
        <input asp-for="@Model.Id" class="form-control" id="id" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.IdUsuarioPropietario"></label>
        <input asp-for="@Model.IdUsuarioPropietario" class="form-control" id="idUsuarioP" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Nombre"></label>
        <input asp-for="@Model.Nombre" class="form-control" id="nombre" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Descripcion"></label>
        <input asp-for="@Model.Descripcion" class="form-control" id="descripcion" />
    </div>
    <button type="submit" class="btn btn-primary" >Enviar</button>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }