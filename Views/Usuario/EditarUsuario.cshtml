@{ 
    ViewData["Title"] = "Editar Usuario";
}

@using Tp11.ViewModels
@model UpdateUsuarioViewModel

<h1>@ViewData["Title"]</h1>
<form asp-controller="Usuario" class="FormPosition updateForm"  asp-action="EditarUsuarioFromForm" method="post">
    <input hidden asp-for="@Model.Id">
    <div class="form-group">
        <label asp-for="@Model.Nombre"></label>
        <input asp-for="@Model.Nombre" class="form-control" id="nombre" value="@Model.Nombre" />
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span> 
    </div>
    <div class="form-group">
        <label asp-for="@Model.Contrasenia"></label>
            <input class="form-control w-50" asp-for="@Model.Contrasenia" type="password" value="@Model.Contrasenia">
        <span asp-validation-for="@Model.Contrasenia" class="text-danger"></span>   
    </div>
    @if(@Model.Id == @Model.IdUsuarioLogueado) {
        <input hidden asp-for="@Model.Rol" />
    }else {
        <div class="form-group">
            <label asp-for="@Model.Rol"></label>
            <select asp-for="@Model.Rol" asp-items="Html.GetEnumSelectList<Rol>()" class="form-control">
                <option value="">Seleccionar Nivel</option>
            </select>
            <span asp-validation-for="@Model.Rol" class="text-danger"></span> 
        </div>
    }
    <button type="submit" class="btn btn-primary" >Enviar</button>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }