@{
    ViewData["Title"] = "Usuarios";
}

@using Tp11.ViewModels
@model List<GetUsuarioViewModel>

<h2>Lista Usuarios</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th hidden>ID</th>
            <th>Nombre</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td hidden>@usuario.Id</td>
                <td>@usuario.Nombre</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Usuario" asp-action="EditarUsuario" asp-route-idUsuario="@usuario.Id">Editar</a>
                    <a class="btn btn-danger" asp-controller="Usuario" asp-action="EliminarUsuario" asp-route-idUsuario="@usuario.Id" onclick="return confirm('Â¿Estas seguro que quieres eliminar el elemento?')">Eliminar</a>                      
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <td colspan="4">
            <a class="btn btn-success" asp-controller="Usuario" asp-action="AgregarUsuario">Agregar Usuario</a>
        </td>
    </tfoot>
</table>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }