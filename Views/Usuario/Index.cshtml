@{
    ViewData["Title"] = "Usuarios";
}

@using Tp11.ViewModels
@model List<GetUsuarioViewModel>

<h2>@ViewData["Title"]</h2>

<div class="container mt-4"> <!-- Agregado un contenedor para alinear el botÃ³n -->
    <div class="row mb-3">
        <div class="col">
            <a class="btn btn-success" asp-controller="Usuario" asp-action="AgregarUsuario">Agregar Usuario</a>
        </div>
</div>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th hidden>ID</th>
            <th>Nombre</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td hidden>@usuario.Id</td>
                <td>@usuario.Nombre</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Usuario" asp-action="EditarUsuario" asp-route-idUsuario="@usuario.Id">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <a class="btn btn-danger" asp-controller="Usuario" asp-action="EliminarUsuario" asp-route-idUsuario="@usuario.Id">
                        <i class="fas fa-trash-alt"></i> Eliminar
                    </a>                      
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
    </tfoot>
</table>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }