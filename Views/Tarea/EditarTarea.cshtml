@{ 
    ViewData["Title"] = "Editar Tarea";
}

@using tp10.Models
@model tp10.Models.Tarea

<h1>@ViewData["Title"]</h1>
<form asp-controller="Tarea" asp-action="EditarTareaFromForm" method="post">
    <input hidden asp-for="@Model.Id">
    <div class="form-group">
        <label asp-for="@Model.IdTablero">Id tablero</label>
        <input asp-for="@Model.IdTablero" class="form-control" id="idTablero" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Nombre">nombre</label>
        <input asp-for="@Model.Nombre" class="form-control" id="nombre" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Estado">Estado</label>
        <select asp-for="@Model.Estado" asp-items="Html.GetEnumSelectList<EstadoTarea>()" class="form-control">
            <option value="">Seleccionar Estado</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Descripcion">Descripcion</label>
        <input asp-for="@Model.Descripcion" class="form-control" id="descripcion" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Color">color</label>
        <input asp-for="@Model.Color" class="form-control" id="color" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.IdUsuarioAsignado">Id usuario asignado</label>
        <input asp-for="@Model.IdUsuarioAsignado" class="form-control" id="idUsuarioA" />
    </div>
    <button type="submit" class="btn btn-primary" >Enviar</button>
</form>