@{
    ViewData["Title"] = "Tareas";
}

@using Tp11.ViewModels
@model List<GetTareaViewModel>

<h2>Lista de tareas</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th hidden>ID</th>
            <th>IdTablero</th>
            <th>Nombre</th>
            <th>Estado</th>
            <th>Descripcion</th>
            <th>Color</th>
            <th>IdUsuarioAsignado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarea in Model)
        {
            <tr>
                <td hidden>@tarea.Id</td>
                <td>@tarea.IdTablero</td>
                <td>@tarea.Nombre</td>
                <td>@((int)tarea.Estado)</td>
                <td>@tarea.Descripcion</td>
                <td>@tarea.Color</td>
                <td>@tarea.IdUsuarioAsignado</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Tarea" asp-action="EditarTarea" asp-route-idTarea="@tarea.Id">Editar</a>
                    <a class="btn btn-danger"  asp-controller="Tarea" asp-action="DeleteTarea" asp-route-idTarea="@tarea.Id" onclick="return confirm('Â¿Estas seguro que quieres eliminar el elemento?')">Eliminar</a>                      
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <td colspan="4">
            <a class="btn btn-success" asp-controller="Tarea" asp-action="AgregarTarea">Agregar Tarea</a>
        </td>
    </tfoot>
</table>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
