@{ 
    ViewData["Title"] = "Editar Tarea";
}

@using Tp11.ViewModels
@model UpdateTareaViewModel

@{
    bool isAdmin = (ViewContext.HttpContext.Session.GetString("Rol") == "administrador");
    int idUsuarioLogueado = Convert.ToInt32(ViewContext.HttpContext.Session.GetString("Id"));
}


<h1>@ViewData["Title"]</h1>
<form asp-controller="Tarea" asp-action="EditarTareaFromForm" method="post">
    <input hidden asp-for="@Model.Id">
        
    @if(isAdmin){
    // Si no es admin solo puede modificar el estado
    <div class="form-group">
        <label class ="form-label" asp-for="@Model.IdTablero">Asignar a tablero:</label>
        <select asp-for="@Model.IdTablero" class="form-select w-50" aria-label="Default select example" id="IdTablero">
            
            <option value="@Model.IdTablero" selected>@Model.NombreTableroAsignado</option>
            @foreach(var tablero in Model.TablerosParaAsignar)
            {
                <option value="@tablero.Id">@tablero.Nombre</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label class ="form-label" asp-for="@Model.Nombre">Nombre</label>
        <input asp-for="@Model.Nombre" class="form-control w-50" id="nombre" value="@Model.Nombre"/>
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label class ="form-label" asp-for="@Model.Descripcion">Descripcion</label>
        <input asp-for="@Model.Descripcion" class="form-control w-50" id="descripcion" value="@Model.Descripcion" />
        <span asp-validation-for="@Model.Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class ="form-label" asp-for="@Model.Color">color</label>
        <input asp-for="@Model.Color" class="form-control w-50" id="color" value="@Model.Color"/>
        <span asp-validation-for="@Model.Color" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class ="form-label" asp-for="@Model.IdUsuarioAsignado">Asignar a usuario:</label>
        <select asp-for="@Model.IdUsuarioAsignado" class="form-select w-50" aria-label="Default select example" id="IdUsuarioAsignado">
            <option value="@Model.IdUsuarioAsignado" selected>@Model.NombreUsuarioAsignado</option>
            @foreach(var usuario in Model.UsuariosParaAsignar) {
                <option value="@usuario.Id">@usuario.Nombre</option>
            }
        </select> 
    </div>
    } else if(idUsuarioLogueado == Model.IdUsuarioAsignado)
    { // Si es el asignado puede modificar su estado, todo lo demas estara oculto
        <input hidden asp-for="@Model.IdTablero">
        <input hidden asp-for="@Model.Nombre">
        <input hidden asp-for="@Model.Descripcion">
        <input hidden asp-for="@Model.Color">
        <input hidden asp-for="@Model.IdUsuarioAsignado">
    }
        
    <div class="form-group">
        <label class ="form-label" asp-for="@Model.Estado">Estado</label>
        <select asp-for="@Model.Estado" asp-items="Html.GetEnumSelectList<EstadoTarea>()" class="form-control w-50">
            <option value="@Model.Estado" selected>@Model.Estado.ToString()</option>
        </select>
        <span asp-validation-for="@Model.Estado" class="text-danger"></span> 
    </div>
    <button type="submit" class="btn btn-primary" >Enviar</button>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }